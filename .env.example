# Server Configuration
NODE_ENV=development
PORT=8000

# Database (replace with your actual MongoDB connection string)
DATABASE_URL=mongodb://localhost:27017/supertip

# JWT Authentication
JWT_SECRET=your_super_secure_secret_key_here
